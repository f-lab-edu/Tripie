{
  "extends": "@tripie-pyotato/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "types": ["react", "node", "jest"],
    "preserveSymlinks": true
  },
  "include": [
    "next-env.d.ts",
    "typings",
    "~/*.ts",
    "~/*.tsx",
    "**/*.ts",
    "***/**/*.ts",
    "***/**/*.tsx",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/api/auth/[...nextauth]"
  ],
  "exclude": ["node_modules", "dist", ".next", "out", "*.mjs", "*.cjs"]
}
