{
  "name": "@tripie-pyotato/design-system",
  "version": "0.1.3",
  "description": "트리피에 사용되는 디자인 시스템",
  "main": "index.js",
  "type": "module",
  "sideEffects": false,
  "exports": {
    "import": [
      "./dist/index.js",
      "./dist/*.js",
      "./dist/*/*.js"
    ],
    "require": [
      "./dist/index.cjs",
      "./dist/*.cjs",
      "./dist/*/*.cjs"
    ]
  },
  "scripts": {
    "build": "tsup",
    "metafile": "tsup --format cjs,esm",
    "build:pkg": "tsc",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "pnpm run lint --fix",
    "generate:component": "turbo gen react-component",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "clean": "rm -rf ./node_modules && rm -rf ./.turbo && rm -rf ./dist && rm -rf ./.next"
  },
  "devDependencies": {
    "@storybook/react": "^8.2.6",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.4.3",
    "@tripie-pyotato/jest": "workspace:*",
    "@tripie-pyotato/typescript-config": "workspace:*",
    "@tripie-pyotato/eslint-config": "workspace:*",
    "@turbo/gen": "^2.0.11",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@types/react": "^18.3.3",
    "@vitejs/plugin-react": "^4.3.4",
    "babel-jest": "^29.7.0",
    "csstype": "^3.1.3",
    "esbuild-sass-plugin": "^3.3.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "next": "15.0.0-rc.0",
    "react": "^18.3.1",
    "ts-jest": "^29.2.4",
    "tsup": "^8.4.0",
    "vitest": "^3.0.6"
  },
  "dependencies": {
    "@swc/core": "^1.11.13",
    "classnames": "^2.5.1",
    "framer": "^2.4.1",
    "framer-motion": "^11.11.17",
    "react-dom": "^18.3.1",
    "react-intersection-observer": "9.13.1",
    "sass": "^1.81.0",
    "usehooks-ts": "^3.1.0"
  },
  "typesVersions": {
    "*": {
      "*": [
        "src/*",
        "src/*/index"
      ]
    }
  },
  "peerDependencies": {
    "next": "*",
    "react": "*"
  }
}
