{
  "extends": "@tripie-pyotato/typescript-config/nextjs.json",
  "compilerOptions": {
    "rootDir": ".",
    "target": "ESNext",
    "outDir": "./dist",
    "jsx": "preserve",
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"]
    },
    "incremental": false
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../../typings",
    "jest.setup.cjs",
    "~/*.ts",
    "~/*.tsx",
    "src/shared/wrappers/index.tsx"
  ],
  "exclude": ["dist"]
}
